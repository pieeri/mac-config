# default for all #
Host *
    ForwardAgent no
    ForwardX11 no
    ForwardX11Trusted yes
    Port 22
    Protocol 2
    ServerAliveInterval 60
    ServerAliveCountMax 30
    LogLevel Quiet
    UserKnownHostsFile ~/.ssh/known_hosts
 
# Server 1 #
Host server1
    HostName
    User
    IdentityFile ~/.ssh/id_rsa

# Server 2 #
Host server2
    Hostname
    User
    IdentityFile ~/.ssh/server2.key
